<%= simple_nested_form_for(@classroom, html: { class: 'form-horizontal' }) do |classroom_form| %>
  <div class="row">
	<div class="small-6 columns">
	  <h3><%= controller.action_name.capitalize %> Classroom</h3>
		<%= render partial: "classroom_fields", locals: {f: classroom_form} %>

	  <div class="form-actions">
		<%= classroom_form.submit nil, class: 'button small radius' %>
		<%= link_to 'Back to list of classrooms', classrooms_path, class: 'button small secondary radius' %>
	  </div>
	</div>
  </div>
<% end %>
