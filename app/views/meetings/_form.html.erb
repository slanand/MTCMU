<%= simple_nested_form_for(@meeting, html: { class: 'form-horizontal' }) do |meeting_form| %>
  <div class="row">
	<div class="small-6 columns">
	  <h3><%= controller.action_name.capitalize %> Meeting</h3>
		<%= render partial: "meeting_fields", locals: {f: meeting_form} %>

	  <div class="form-actions">
		<%= meeting_form.submit nil, class: 'button small radius' %>
		<%= link_to 'Back to list of meetings', meetings_path, class: 'button small secondary radius' %>
	  </div>
	</div>
  </div>
<% end %>
