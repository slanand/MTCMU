<%= simple_nested_form_for(@meeting_type, html: { class: 'form-horizontal' }) do |meeting_type_form| %>
  <div class="row">
	<div class="small-6 columns">
	  <h3><%= controller.action_name.capitalize %> Meeting Type</h3>
		<%= render partial: "meeting_type_fields", locals: {f: meeting_type_form} %>

	  <div class="form-actions">
		<%= meeting_type_form.submit nil, class: 'button small radius' %>
